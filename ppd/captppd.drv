#include <font.defs>
#include <media.defs>

Manufacturer "Canon"
Version $CAPTBACKEND_VERSION

Font *

DriverType custom

Filter application/vnd.cups-raster 0 -
Filter application/vnd.cups-command 0 -
Attribute cupsCommands "" "Clean"

ColorDevice no
*ColorModel Black k chunky 0
*Resolution k 1 0 0 0 "600dpi/600 DPI"
ManualCopies yes

// cupsInteger0 - MarginLeft
// cupsInteger1 - MarginTop
// cupsInteger2 - PaperWidth
// cupsInteger3 - PaperHeight
// cupsInteger4 - PaperSize

// cupsInteger5 - SmoothEnable
// cupsInteger6 - TonerSaving
// cupsCompression - TonerDensity
// cupsMediaType - Mode

#include "media.drv"

*MediaType 0 "PlainPaper/Plain Paper"
MediaType 2 "PlainPaperL/Plain Paper L"
MediaType 2 "Ohp/Transparency"
MediaType 1 "ThickPaper/Thick Paper"
MediaType 4 "ThickPaperH/Thick Paper H"

Darkness 0x00 "1/Extra Light"
Darkness 0x0f "2/Light"
*Darkness 0x1f "3/Normal"
Darkness 0x2f "4/Dark"
Darkness 0x3f "5/Extra Dark"

Option "imageRefinement/Image Refinement" PickOne AnySetup 20
    Choice "False/Disabled" "<</cupsInteger5 0>>setpagedevice"
    *Choice "True/Enabled" "<</cupsInteger5 1>>setpagedevice"

Option "tonerSaving/Toner Saving" PickOne AnySetup 30
    *Choice "False/Disabled" "<</cupsInteger6 0>>setpagedevice"
    Choice "True/Enabled" "<</cupsInteger6 1>>setpagedevice"

#if HAVE_DITHERING_TYPE
Option "cupsHalftoneType/Dithering type" PickOne AnySetup 40
    *Choice "auto/Default algorithm" ""
    Choice "stochastic/Stochastic algorithm" ""
    Choice "bi-level/Bi-level (label printing)" ""
    Choice "foo2zjs/foo2zjs algorithm" ""
#endif

